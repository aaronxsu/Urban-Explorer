<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<div class="row">
  <div class="col-sm-12 text-xs-center bootstrap-welcome">
    <h1>Welcome <%= current_user.email%> <%=current_user.type %> <%=user_session %></h1>
    <p><%= link_to 'edit profile', edit_user_registration_path(current_user) %></p>
    <p><%= link_to 'logout', eval("destroy_#{current_user.type.downcase}_session_path"), method: :delete %></p>

  </div>
</div>

<table>
  <thead>
    <tr>
      <th>User email</th>
      <th>Place ids</th>
      <th>Mode</th>
      <th>Feedback</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.user_email %></td>
        <td><%= trip.place_ids %></td>
        <td><%= trip.mode %></td>
        <td><%= trip.feedback %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path %>
